<div class="grid_container">
  <div class="admindiv">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
    <% else %>
      <%= link_to "Sign Up", signup_path %> or
      <%= link_to "Log In", login_path %>
    <% end %>
    <p id=”notice”><%= notice %></p>
  </div>

  <div class="titlediv">
    <h1 class="title">
      <%= @homepage_dataset.title %>
    <h1>
  </div>
  <div class="aboutmediv">
    <h2 class="about_me">
      <%= @homepage_dataset.about_me %>
    <h2>
    <% if current_user %>
    <td><%= link_to "Edit About Me", edit_homepage_item_path(@homepage_dataset) %></td>
    <% end %>
  </div>
  <div class="qualificationdiv">
    <h2 class="qualifications">
      <table class="qualification_table">
        <thead>
          <tr>
            <th>Topic</th>
            <th>Level</th>
            <th>Grade</th>
            <% if current_user %>
              <div class="editQualificationHeader">
                <th>Edit</th>
                <th>Delete</th>
              </div>
            <% end %>
          </tr>
        <thead>
        <tbody>
          <% Qualification.all.each do |qualification| %>
            <tr>
              <td><%= qualification.topic %></td>
              <td><%= qualification.level %></td>
              <td><%= qualification.grade %></td>
              <% if current_user %>
                <div class="editQualificationButton">
                <td><%= link_to "Edit Qualification", edit_qualification_path(qualification) %></td>
                <td><%= link_to 'Delete', qualification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </div>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </h2>
    <% if current_user %>
      <div class="newQualificationButton">
        <%= link_to "New Qualification", new_qualification_path %>
      </div>
    <% end %>
  </div>
  <div class="workdiv">
    <h2 class="work">
      <table class="work_table">
        <thead>
          <tr>
            <th>Organisation</th>
            <th>Years</th>
            <th>Role</th>
            <th>Tasks</th>
            <% if current_user %>
              <div class="editJobHeader">
                <th>Edit</th>
                <th>Delete</th>
              </div>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% Work.all.each do |job| %>
            <tr>
              <td><%= job.organisation %></td>
              <td><%= job.years %></td>
              <td><%= job.role %></td>
              <td><%= job.tasks %></td>
              <% if current_user %>
                <div class="editJobButton">
                  <td><%= link_to "Edit Job", edit_work_path(job) %></td>
                  <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </div>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </h2>
        <% if current_user %>
          <div class="newWorkButton">
        <%= link_to "New Work", new_work_path %>
      </div>
    <% end %>
  </div>
</div>